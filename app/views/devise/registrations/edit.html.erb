<main>
 <p id="notice"></p>
 <div class="container">
   <div class="row">
     <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
        <%= form_with model: @user, url: user_session_path, local: true do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          
          <div class="form-group">
            <%= f.label :name %><br />
            <%= f.text_field :name, class: "form-control name" %>
          </div>
          
          <div class="form-group">
            <%= f.label :image %><br />
            <%= f.attachment_field :profile_image, class: "form-control-file user_image" %>
          </div>
          
          <div class="form-group">
            <%= f.label :introduction %><br />
            <%= f.text_area :user_introduction, class: "form-control introduction" %>
          </div>
          
          <div class="form-group">
            <%= f.submit "Update User", class: "btn btn-secondary" %>
          </div>
          
        <% end %>  
     </div> 
   </div>
 </div>
</main>





