<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <%= render 'users/user-info', user: @user, book: @userinfo %>
      <!--bookの詳細ページ-->
      <div class="col-md-8 offset-md-1 ">
       <h2>Book detail</h2>
       <table class="table">
         
         <tody>
           <tr>
             <td><%= link_to (attachment_image_tag @user, :profile_image, size: '40x40', fallback: "no_image.jpg"), user_path(@user.id) %><br />
             <%= link_to @book.user.name, user_path(@user.id) %></td>
             <td><%= link_to @book.title, book_path(@book.id) %></td>
             <td><%= @book.body %></td>
             <% if @book.user_id == current_user.id %>
               <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success" %></td>
               <td><%= link_to "Destroy", book_path(@book.id), method: :delete, class: "btn btn-sm btn-danger", "data-confirm" => "本当に削除しますか？" %></td>
             <% end %>
           </tr>
         </tbody>
         
       </table>
      </div>
    </div>
  </div>
</main>